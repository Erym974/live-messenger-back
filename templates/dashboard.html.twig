<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			Dashboard | {% block title %}{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"/>

		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body class="dark">

		<div class="container">
			<nav>
				<ul>
					<li><a href="{{ path('admin.dashboard') }}" class="logo"><img src="/logo.jpg" alt=""><span class="nav-item">Dashboard</span></a></li>
					<li><a href="{{ path('admin.dashboard') }}"><i class="fas fa-home"></i><span class="nav-item">Accueil</span></a></li>
					<li><a href="{{ path('admin.dashboard.users') }}"><i class="fas fa-users"></i><span class="nav-item">Utilisateurs</span></a></li>
					<li><a href="{{ path('admin.dashboard.documentations') }}"><i class="fas fa-layer-group"></i><span class="nav-item">Documentations</span></a></li>
					<li><a href="{{ path('admin.dashboard.reports') }}"><i class="fas fa-flag"></i><span class="nav-item">Signalements</span></a></li>
					<li><a href=""><i class="fas fa-cog"></i><span class="nav-item">Paramètres</span></a></li>
					<li><a href="{{ path('auth.logout') }}" class="logout"><i class="fas fa-sign-out-alt"></i><span class="nav-item">Deconnexion</span></a></li>
				</ul>
			</nav>
			<section class="main"> 
                <h1 class="tab-title">{{ block('title') }}</h1>
                {% block body %}{% endblock %}
            </section>
        </div>
    </body>
</html>
