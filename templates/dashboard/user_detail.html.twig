{% extends "dashboard.html.twig" %}
{% set active = "users" %}

{% block title %}{% trans %}Information about this user{% endtrans %}{% endblock %}
{% block page_main_title %}{% trans %}Information about this user{% endtrans %}{% endblock %}

{% block body %}

    <div class="content w-100">

      <div class="row mb-4">

          <div class="col-xl-3 col-lg-4">
            <div class="card p-3 mb-3 h-100">
                <div class="d-flex fc aic jcc my-3 gap-2 h-100">

                  <div class="position-relative">
                      <img src="{{ user.profilepicture }}" class="rounded-circle" alt="" height="130" width="130">
                  </div>
                  <input type="file" class="d-none" name="profile-picture" id="profile-picture">
                  <input type="hidden" name="form" value="profile-picture">

                  <div class="my-3">
                    <p class="mb-0 text-dark text-center">
                      <b>{{ user.fullname(true) }}</b>
                      <br>
                        <div class="text-muted mt-2 text-center">
                          <span class="text-dark">Joined {{ user.createdAt|date() }}</span>
                        </div>
                    </p>
                  </div>

                </div>
            </div>
          </div>

          <div class="col-xl-7 col-lg-8">
            <div class="card h-100">
              <div class="personnal-data">
                  <div class="header p-3 d-flex jcb aic">
                    <h3 class="mb-0">{% trans %}Personnal information{% endtrans %}</h3>
                    <span class="material-icons-sharp" data-qr-edit-pi>edit</span>
                  </div>
                  <hr class="mt-0">
                  <div class="px-3">
                    <div class="d-flex jcb aic mb-3">
                      <span>ID :</span>
                      <span id="profile-id" >{{ user.id }}</span>
                    </div>
                    <div class="d-flex jcb aic mb-3">
                      <span>Role :</span>
                      <span id="profile-role" >{{ user.role }}</span>
                    </div>
                    <hr>
                    <div class="d-flex jcb aic mb-3">
                      <span>{% trans %}Firstname{% endtrans %} :</span>
                      <span id="profile-firstname" >{{ user.firstname }}</span>
                    </div>
                    <div class="d-flex jcb aic mb-3">
                      <span>{% trans %}Lastname{% endtrans %} :</span>
                      <span id="profile-lastname" >{{ user.lastname }}</span>
                    </div>
                    <div class="d-flex jcb aic mb-3">
                      <span>{% trans %}Email{% endtrans %} :</span>
                      <span id="profile-email" >{{ user.email }}</span>
                    </div>
                </div>
              </div>

          </div>

      </div>

    </div>

  <a href="{{ app.request.headers.get('referer') }}" class="btn btn-outline-primary">{% trans %}Back{% endtrans %}</a>



{% endblock body %}