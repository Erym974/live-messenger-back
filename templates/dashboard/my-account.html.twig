{% extends "dashboard.html.twig" %}

{% block title %}{% trans %}My Account{% endtrans %}{% endblock %}
{% block page_main_title %}{% trans %}My Account{% endtrans %}{% endblock %}
{% block user_id %}{{ app.user.id }}{% endblock %}

{% block body %}


  <main>
      <div class="row">


          <div class="col-xl-3 col-lg-4">
            <div class="card p-3 mb-3">
                <form class="d-flex fc aic jcc my-3 gap-2" id="profile-picture-form" method="POST" enctype="multipart/form-data">
                  <div class="position-relative">
                    <img src="{{ app.user.profilepicture }}" class="rounded-circle" alt="" height="130" width="130">
                  </div>
                  <input type="file" class="d-none" name="profile-picture" id="profile-picture">
                  <input type="hidden" name="form" value="profile-picture">

                  <div class="my-3">
                    <p class="mb-0 text-dark text-center">
                      <b>{{ app.user.fullname(true) }}</b>
                      <br>
                        <div class="text-muted mt-2 text-center">
                          {{ app.user.role|trans }}
                        </div>
                    </p>
                  </div>

                </form>
            </div>
          </div>

          <div class="col-xl-7 col-lg-8">
            <div class="card">
              <div class="personnal-data">
                  <div class="header p-3 d-flex jcb aic">
                    <h3 class="mb-0">{% trans %}Personnal information{% endtrans %}</h3>
                    <span class="material-icons-sharp" data-qr-edit-pi>edit</span>
                  </div>
                  <hr class="mt-0">
                  <div class="px-3">
                    <div class="d-flex jcb aic mb-3">
                      <span>{% trans %}Firstname{% endtrans %} :</span>
                      <span id="profile-firstname" >{{ app.user.firstname }}</span>
                    </div>
                    <div class="d-flex jcb aic mb-3">
                      <span>{% trans %}Lastname{% endtrans %} :</span>
                      <span id="profile-lastname" >{{ app.user.lastname }}</span>
                    </div>
                    <div class="d-flex jcb aic mb-3">
                      <span>{% trans %}Email{% endtrans %} :</span>
                      <span id="profile-email" >{{ app.user.email }}</span>
                    </div>
                  </div>
              </div>
            </div>

              <div class="card mt-3">
                  <div class="personnal-data">
                    <div class="header p-3 d-flex jcb aic">
                      <h3 class="mb-0">{% trans %}Security{% endtrans %}</h3>
                      <span class="material-icons-sharp" data-qr-edit-security>edit</span>
                    </div>
                    <hr class="mt-0">
                    <div class="px-3">
                      <div class="d-flex jcb aic mb-3">
                        <span>{% trans %}Password{% endtrans %} :</span>
                        <span>**************</span>
                      </div>
                    </div>
                  </div>
              </div>

          </div>


      </div>
  </main>


{% endblock body %}